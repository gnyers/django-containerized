---
services:
  newspaper:
    build: .
    ports:
      - "8000:8000"
    volumes:
      - newspaper-data:/data
    environment:
      - DATABASE_URL=sqlite:////data/db.sqlite3
      - ADMIN_USER=${ADMIN_USER}                 # changed!
      - ADMIN_EMAIL=${ADMIN_EMAIL}               # changed!
      - ADMIN_PW=${ADMIN_PW}                     # changed!
volumes:
  newspaper-data: null
